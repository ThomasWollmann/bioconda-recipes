<project default="compile">
    <path id="class.path">
      <fileset dir="lib">
        <include name="lib/../*.jar" />
      </fileset>
    </path>    
    <target name="compile">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin">
            <classpath refid="class.path" />
        </javac>
    </target>
</project>
